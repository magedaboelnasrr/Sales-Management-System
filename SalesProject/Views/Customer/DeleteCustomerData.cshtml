@model SalesProject.Models.CustomersVM
@{
    ViewBag.Title = "DeleteCustomerData";

}

<center>
    <h1 class="text-info" style="margin-bottom:50px;">Delete Customer Data</h1>
</center>

<form asp-controller="Customer" asp-action="DeleteCustomerData" method="post" class="form-group">

    <label asp-for="CustomerName">Supplier Name</label>
    <input type="text" asp-for="CustomerName" class="form-control" disabled />
    <br />

    <label asp-for="PhoneNumber">Phone Number</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" disabled />
    <br />

    <label asp-for="Email">Email</label>
    <input type="text" asp-for="Email" class="form-control" disabled />

    <br />

    <br />
    <br />
    <br />

    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Customer" asp-action="Index" class="btn btn-dark">Back</a>
    </center>

</form>